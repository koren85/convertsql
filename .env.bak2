# Пример конфигурационного файла
# Скопируйте этот файл в .env и заполните необходимые значения

# API ключи для нейросетей
# Вы можете использовать OpenAI или Anthropic (или обе)
# Раскомментируйте и установите нужные ключи

# OpenAI API ключ
# OPENAI_API_KEY=sk-ваш_openai_ключ

# Anthropic API ключ
ANTHROPIC_API_KEY=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

# Настройки для PostgreSQL
PG_HOST=localhost
PG_PORT=5452
PG_DATABASE=testdb
PG_USER=testuser
PG_PASSWORD=testpassword

# Настройки конвертера
MAX_EXECUTION_TIME=30

# Настройки использования нейросетей
USE_AI_CONVERSION=true
AI_PROVIDER=anthropic  # или anthropic

# Модели нейросетей
OPENAI_MODEL=gpt-4  # или gpt-3.5-turbo для более быстрой работы
ANTHROPIC_MODEL=claude-3-sonnet-20240229  # или claude-3-haiku-20240307 для более быстрой работы

# Параметры запросов к нейросетям
# Низкая температура для более предсказуемых результатов
AI_TEMPERATURE=1  
# Максимальная длина ответа
AI_MAX_TOKENS=4000  
# Количество попыток использования нейросети при ошибках
AI_RETRY_COUNT=2  
# После скольких неудачных стандартных попыток использовать нейросеть
AI_FALLBACK_THRESHOLD=2  
